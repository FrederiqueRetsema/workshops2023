{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "location": {
            "type": "string",
            "defaultValue": "West Europe"
        },
        "name": {
            "type": "string",
            "defaultValue": "frederique"
        },
        "WordpressUserName": {
            "type": "string",
            "defaultValue": "---vul-hier-het-user-id-van-de-database-in---"
        },
        "WordpressPassword": {
            "type": "string",
            "defaultValue": "---vul-hier-het-password-van-de-database-in---"
        },
        "WordpressEndpoint": {
            "type": "string",
            "defaultValue": "---vul-hier-het-ip-adres-van-de-database-in---"
        }
    },
    "functions": [
        {
          "namespace": "wordpress",
          "members": {
            "resourcename": {
              "parameters": [
                {
                  "name": "resourceType",
                  "type": "string"
                },
                {
                    "name": "name",
                    "type": "string"
                  }
                ],
              "output": {
                "type": "string",
                "value": "[concat('wordpress-', parameters('resourceType'), '-', parameters('name'))]"
              }
            }
          }
        }
      ],
    "resources": [
          {
            "type": "Microsoft.Network/virtualNetworks",
            "apiVersion": "2022-05-01",
            "name": "[wordpress.resourcename('vnet', parameters('name'))]",
            "location": "[parameters('location')]",
            "properties": {
                "addressSpace": {
                    "addressPrefixes": [
                        "10.0.0.0/16"
                    ]
                }
            }
        },
        {
          "type": "Microsoft.Network/virtualNetworks/subnets",
          "apiVersion": "2022-05-01",
          "name": "[concat(wordpress.resourcename('vnet', parameters('name')), '/', wordpress.resourcename('subnet-1', parameters('name')))]",
          "dependsOn": [
            "[wordpress.resourcename('vnet', parameters('name'))]"
          ],
          "properties": {
            "addressPrefix": "10.0.0.0/24"
          }
        },
        {
          "type": "Microsoft.Network/virtualNetworks/subnets",
          "apiVersion": "2022-05-01",
          "name": "[concat(wordpress.resourcename('vnet', parameters('name')), '/', wordpress.resourcename('subnet-2', parameters('name')))]",
          "dependsOn": [
            "[wordpress.resourcename('vnet', parameters('name'))]"
          ],
          "properties": {
            "addressPrefix": "10.0.1.0/24"
          }
        },
        {
          "type": "Microsoft.Network/networkInterfaces",
          "apiVersion": "2022-01-01",
          "name": "[concat(wordpress.resourcename('nic', parameters('name')))]",
          "location": "[parameters('location')]",
          "kind": "Regular",
          "properties": {
            "ipConfigurations": {
              "name": "[concat(wordpress.resourcename('nic-config', parameters('name')))]",
              "properties": {
                "publicIpAddress": {
                  "name": "[concat(wordpress.resourcename('nic-config-public-ip', parameters('name')))]",
                  "properties": {
                    "publicIpAddressVersion": "IPv4",
                    "publicIpAllocationMethod": "Dynamic"
                  }
                }
              }
            }
          }
        },
        {
          "type": "Microsoft.Compute/virtualMachines",
          "apiVersion": "2022-08-01",
          "name": "[wordpress.resourcename('vm', parameters('name'))]",
          "location": "[parameters('location')]",
          "properties": {
            "hardwareProfile": {
              "vmSize": "Standard_B1S"
            },
            "storageProfile": {
              "imageReference": {
                "publisher": "canonical",
                "offer": "0001-com-ubuntu-server-focal",
                "sku": "20_04-lts-gen2",
                "version": "latest"
              },
              "osDisk": {
                "osType": "Linux",
                "name": "[concat(wordpress.resourcename('vm', parameters('name')),'_disk1')]",
                "createOption": "FromImage",
                "managedDisk": {
                  "storageAccountType": "Standard_LRS"
                },
                "deleteOption": "Delete",
                "diskSizeGb": 30
              },
              "osProfile": {
                "computerName":  "[wordpress.resourcename('vm', parameters('name'))]",
                "adminUsername": "[parameters('WordpressUserName')]",
                "adminPassword": "[parameters('WordpressPassword')]",
                "linuxConfiguration": {
                  "disablePasswordAuthentication": false,
                  "provisionVMAgent": true
                }
              }
              // ,
              // "networkProfile": {
              //   "networkInterfaces": {
              //     "id": ""
              //   }
              // }
            }
          }
        }
    ]
}